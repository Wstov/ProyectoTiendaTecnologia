@model List<Usuario>

<h1>Lista de usuarios</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>ID Usuario</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Ciudad</th>
            <th>País</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objModel in Model)
        {
            <tr class="text-center">
                <td>@objModel.IDUsuario</td>
                <td>@objModel.Nombre</td>
                <td>@objModel.Apellido</td>
                <td>@objModel.Email</td>
                <td>@objModel.Telefono</td>
                <td>@objModel.Direccion</td>
                <td>@objModel.Ciudad</td>
                <td>@objModel.Pais</td>
                @if (User.IsInRole("admin"))
                {
                    <td><a href="@Url.Action("Edit", new { id = objModel.IDUsuario })">Editar</a></td>
                    <td><a href="@Url.Action("Details", new { id = objModel.IDUsuario })">Detalles</a></td>
                    <td><a href="@Url.Action("Delete", new { id = objModel.IDUsuario })">Eliminar</a></td>
                }
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole("admin"))
{
    <a class="btn btn-primary" href="@Url.Action("Create")">Crear nuevo usuario</a>
}