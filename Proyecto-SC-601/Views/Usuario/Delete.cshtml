@model Proyecto_SC_601.Models.Usuario

<h1>Eliminar Usuario</h1>

<h3>¿Está seguro que desea eliminar este registro?</h3>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.Nombre
        </dd>
        <dt class="col-sm-2">
            Apellido
        </dt>
        <dd class="col-sm-10">
            @Model.Apellido
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Direccion
        </dt>
        <dd class="col-sm-10">
            @Model.Direccion
        </dd>
        <dt class="col-sm-2">
            Ciudad
        </dt>
        <dd class="col-sm-10">
            @Model.Ciudad
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Model.Pais
        </dd>
        <dt class="col-sm-2">
            Código Postal
        </dt>
        <dd class="col-sm-10">
            @Model.CodigoPostal
        </dd>
        <dt class="col-sm-2">
            Teléfono
        </dt>
        <dd class="col-sm-10">
            @Model.Telefono
        </dd>
        <dt class="col-sm-2">
            Rol
        </dt>
        <dd class="col-sm-10">
            @Model.Rol
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IDUsuario"/>

    @if (User.IsInRole("admin"))
    {
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
        </div>
    }
</form>
