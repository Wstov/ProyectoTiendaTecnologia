@model Proyecto_SC_601.Models.Proveedor

<h1>Eliminar Proveedor</h1>

<h3>¿Está seguro que desea eliminar este registro?</h3>

<div>
    <h4>Proveedor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.NombreProveedor
        </dd>
        <dt class="col-sm-2">
            Contacto
        </dt>
        <dd class="col-sm-10">
            @Model.Contacto
        </dd>
        <dt class="col-sm-2">
            Direccion
        </dt>
        <dd class="col-sm-10">
            @Model.Direccion
        </dd>
        <dt class="col-sm-2">
            Ciudad
        </dt>
        <dd class="col-sm-10">
            @Model.Ciudad
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Model.Pais
        </dd>
        <dt class="col-sm-2">
            Teléfono
        </dt>
        <dd class="col-sm-10">
            @Model.Telefono
        </dd>
        <dt class="col-sm-2">
            Email
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IDProveedor"/>

    @if (User.IsInRole("admin"))
    {
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
        </div>
    }
</form>
