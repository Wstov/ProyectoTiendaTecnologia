 @model Proyecto_SC_601.Models.Producto;

<h1>Editar Usuario</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input asp-for="IDProducto" type="hidden" />

            <div class="form-group">
                <label for="NombreProducto">Nombre</label>
                <input asp-for="NombreProducto" class="form-control" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Descripcion">Descripcion</label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Precio">Precio</label>
                <input asp-for="Precio" type="numnber" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Stock">Existencias</label>
                <input asp-for="Stock" type="number" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IDCategoria">Categoría</label>
                @Html.DropDownListFor(model => model.IDCategoria, ViewBag.Categorias as SelectList, "Seleccione una categoría", new { @class = "form-control" })
                <span asp-validation-for="IDCategoria" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IDProveedor">Proveedor</label>
                @Html.DropDownListFor(model => model.IDProveedor, ViewBag.Proveedores as SelectList, "Seleccione un proveedor", new { @class = "form-control" })
                <span asp-validation-for="IDProveedor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImagenURL1">Imagen URL 1</label>
                <input asp-for="ImagenURL1" class="form-control" />
                <span asp-validation-for="ImagenURL1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImagenURL2">Imagen URL 2</label>
                <input asp-for="ImagenURL2" class="form-control" />
                <span asp-validation-for="ImagenURL2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ImagenURL3">Imagen URL 3</label>
                <input asp-for="ImagenURL3" class="form-control" />
                <span asp-validation-for="ImagenURL3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Activo">Activo</label>
                <input asp-for="Activo" type="checkbox" class="form-check-input" />
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>
            
            @if (User.IsInRole("admin"))
            {
                <div class="form-group">
                    <input type="submit" value="Confirmar" class="btn btn-primary"></input>
                </div>
            }
        </form>
    </div>
</div>
<div>
    <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
</div>