@model Proyecto_SC_601.Models.Producto

<h1>Eliminar Producto</h1>

<h3>¿Está seguro que desea eliminar este registro?</h3>

<div>
    <h4>Producto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre del Producto
        </dt>
        <dd class="col-sm-10">
            @Model.NombreProducto
        </dd>

        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>

        <dt class="col-sm-2">
            Precio
        </dt>
        <dd class="col-sm-10">
            @Model.Precio
        </dd>

        <dt class="col-sm-2">
            Stock
        </dt>
        <dd class="col-sm-10">
            @Model.Stock
        </dd>

        <dt class="col-sm-2">
            Categoría
        </dt>
        <dd class="col-sm-10">
            @Model.IDCategoria
        </dd>

        <dt class="col-sm-2">
            Proveedor
        </dt>
        <dd class="col-sm-10">
            @Model.IDProveedor
        </dd>

        <dt class="col-sm-2">
            Activo
        </dt>
        <dd class="col-sm-10">
            @if (Model.Activo)
            {
                <span>Activo</span>
            }
            else
            {
                <span>No Activo</span>
            }
        </dd>

        <dt class="col-sm-2">
            Imagen URL 1
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenURL1 != null)
            {
                <img src="@Model.ImagenURL1" alt="Imagen 1" style="width: 200px; height: 200px;" />
            }
            else
            {
                <p>No hay imagen.</p>
            }
        </dd>

        <dt class="col-sm-2">
            Imagen URL 2
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenURL2 != null)
            {
                <img src="@Model.ImagenURL2" alt="Imagen 2" style="width: 200px; height: 200px;" />
            }
            else
            {
                <p>No hay imagen.</p>
            }
        </dd>

        <dt class="col-sm-2">
            Imagen URL 3
        </dt>
        <dd class="col-sm-10">
            @if (Model.ImagenURL3 != null)
            {
                <img src="@Model.ImagenURL3" alt="Imagen 3" style="width: 200px; height: 200px;" />
            }
            else
            {
                <p>No hay imagen.</p>
            }
        </dd>
    </dl>
</div>


<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IDProducto"/>

    @if (User.IsInRole("admin"))
    {
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
        </div>
    }
</form>
