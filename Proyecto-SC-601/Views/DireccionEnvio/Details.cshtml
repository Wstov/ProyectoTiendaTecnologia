@model DireccionEnvio
<div class="cart">
    @Html.Partial("carIco")
</div>

<style>
    .cart-location {
        position: fixed;
        top: 10px;
        right: 10px;
        padding: 12px 25px;
    }
</style>

<h3>Detalles del usuario</h3>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Direccion
        </dt>
        <dd class="col-sm-10">
            @Model.Direccion
        </dd>
        <dt class="col-sm-2">
            Ciudad
        </dt>
        <dd class="col-sm-10">
            @Model.Ciudad
        </dd>
        <dt class="col-sm-2">
            País
        </dt>
        <dd class="col-sm-10">
            @Model.Pais
        </dd>
        <dt class="col-sm-2">
            Código Postal
        </dt>
        <dd class="col-sm-10">
            @Model.CodigoPostal
        </dd>
        <dt class="col-sm-2">
            Teléfono
        </dt>
        <dd class="col-sm-10">
            @Model.Telefono
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.IDDireccion">Editar</a>
    <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
</div>