@model List<DireccionEnvio>
<div class="cart">
    @Html.Partial("carIco")
</div>

<style>
    .cart-location {
        position: fixed;
        top: 10px;
        right: 10px;
        padding: 12px 25px;
    }
</style>

<h1>Lista de usuarios</h1>

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr class="text-center">
            <th>Dirección</th>
            <th>Ciudad</th>
            <th>País</th>
            <th>Código postal</th>
            <th>Teléfono</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var objModel in Model)
        {
            <tr class="text-center">
                <td>@objModel.Direccion</td>
                <td>@objModel.Ciudad</td>
                <td>@objModel.Pais</td>
                <td>@objModel.CodigoPostal</td>
                <td>@objModel.Telefono</td>
                @if (User.Identity.IsAuthenticated)
                {
                    <td><a href="@Url.Action("Edit", new { id = objModel.IDDireccion })">Editar</a></td>
                    <td><a href="@Url.Action("Details", new { id = objModel.IDDireccion })">Detalles</a></td>
                    <td><a href="@Url.Action("Delete", new { id = objModel.IDDireccion })">Eliminar</a></td>
                }
            </tr>
        }
    </tbody>
</table>
@if (User.Identity.IsAuthenticated)
{
    <a class="btn btn-primary" href="@Url.Action("Create")">Crear nueva dirección de envío</a>
}