@model Categoria

<h3>Detalles de la categoría</h3>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.NombreCategoria
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
    </dl>
</div>

<div>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.IDCategoria">Editar</a>
    <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
</div>