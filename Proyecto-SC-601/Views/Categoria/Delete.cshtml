@model Proyecto_SC_601.Models.Categoria

<h1>Eliminar Categoría</h1>

<h3>¿Está seguro que desea eliminar este registro?</h3>

<div>
    <h4>Categoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Model.NombreCategoria
        </dd>
        <dt class="col-sm-2">
            Descripción
        </dt>
        <dd class="col-sm-10">
            @Model.Descripcion
        </dd>
    </dl>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="IDCategoria"/>

    @if (User.IsInRole("admin"))
    {
        <div class="form-group">
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        <a asp-action="Listado" class="btn btn-secondary">Volver a la lista</a>
        </div>
    }
</form>
